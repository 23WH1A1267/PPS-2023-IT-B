//Using All operators
#include<stdio.h>
int main()
{
  int a,b,c,sum,dif,prod,div,moddiv,result,x;
  printf("Enter the values of a and b");
  scanf("%d %d",&a,&b);
  printf("%d %d",a,b);
  //arithmetic operators(1)
  sum = a + b;
  dif = a - b;
  prod = a * b;
  div = a / b;
  moddiv = a % b;
  c = a + b;
  printf(" \nAddition:%d \nsubtraction:%d \nproduct:%d \nQuotient:%d \nRemainder:%d ",sum,dif,prod,div,moddiv);
  //relational operators(2)
  printf("\n true output will be 1 else 0");
  printf("\n both are equal:%d",a == b);
  printf("\n first element greater than second one:%d",a > b);
  printf("\n first element lesser than second one:%d",a < b);
  printf("\n they are not equal%d",a != b);
  printf("\n first element greater than or equal to second one:%d",a >= b);
  printf("\n first element lesser than or equal to second one:%d",a <= b);
  //logical operators(3)
  result = (a < b) && (c > b);
  printf("\n (a < b) && (c > b) is %d", result);
  result = (a == b) || (c < b);
  printf("\n (a == b) || (c > b) is %d", result);
  result = !(a != b);
  printf("\n !(a != b) is %d", result);
  //Assignment operators(4)
  c = a + b;
  printf("\n %d ",c);
  c += a;
  printf("\n %d ",c);
  //Increment and decrement operators(5)
  b = ++a;
  printf("\n %d %d",b,a);
  b = a++;
  printf("\n %d %d",b,a);
  b = a--;
  printf("\n %d %d",b,a);
  b = --a;
  printf("\n %d %d",b,a);
  //bitwise operators(6)
  x = a << 1;
  printf("\n %d", x);
  x = a >> 1;
  printf("\n %d", x);
  result = ((a == 5)&(b == 6));
  printf("\n %d",result);
  result = ((a == 5)|(b == 6));
  printf("\n %d", result );
  result = ((a == 5)^(b == 6));
  printf("\n %d", result);
  result = ~(a);
  printf("\n %d", result);
  //conditional operators(7)
  a = 5,b = 6;
  x = (a > b)?a:b;
  printf("\n %d",x);
  //special operators(8)
  a = 5;
  printf("\n The size of a is %d bytes",sizeof(a));
  
}
