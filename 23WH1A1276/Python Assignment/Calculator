# implement calculator operations using chained conditionals.

def calculator(choice):
    if choice == 1:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        print(num1 + num2)
    elif choice == 2:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        print(num1 - num2)
    elif choice == 3:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        print(num1 * num2)
    elif choice == 4:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        print(num1 / num2)
    else:
        print("Invalid choice")

choice = int(input("Enter your choice (1 for addition, 2 for subtraction, 3 for multiplication, 4 for division): "))
calculator(choice)
