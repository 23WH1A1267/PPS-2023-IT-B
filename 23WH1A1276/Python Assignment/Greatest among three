# prompt: 11.	Implement a program to find the greatest among 3 numbers

def greatest_of_three(num1, num2, num3):
  if num1 > num2 and num1 > num3:
    return num1
  elif num2 > num1 and num2 > num3:
    return num2
  else:
    return num3

# Get input from the user
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))
num3 = float(input("Enter the third number: "))

# Find the greatest number
greatest_num = greatest_of_three(num1, num2, num3)

# Print the result
print(f"The greatest number is: {greatest_num}")

#Implement a program to find the greatest among 3 numbers
def compare(num1,num2,num3):
    if num1 > num2 and num1 >num3:
        return num1
    elif num2 > num3 and num2 >num1:
        return num1
    else:
        return num3

num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))
num3 = float(input("Enter the third number: "))
res = compare(num1,num2,num3)
print(f"The greatest is {res}.")
